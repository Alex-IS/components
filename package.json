{
  "name": "@hospitalrun/components",
  "version": "0.1.6",
  "license": "MIT",
  "module": "dist/components.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HospitalRun/components.git"
  },
  "scripts": {
    "dev": "tsdx watch",
    "prebuild": "npm run test",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "prettier --write \"src/**/*\" \"stories/**/*\" \"test/**/*\" \"README.md\" \"docs/**/*\" && tsdx lint --fix \"src/**/*\" \"test/**/*\"",
    "coveralls": "tsdx test --coverage && cat ./coverage/lcov.info | coveralls",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook",
    "docgen": "genDocs.sh",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16",
    "bootstrap": "^4.3.1",
    "react-bootstrap": "~1.0.0-beta.11"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@babel/core": "~7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/core": "^8.1.0",
    "@semantic-release/github": "^7.0.16",
    "@semantic-release/npm": "^5.1.15",
    "@storybook/addon-actions": "~5.1.11",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/addon-links": "~5.1.11",
    "@storybook/addons": "~5.1.11",
    "@storybook/react": "~5.1.11",
    "@storybook/theming": "~5.1.11",
    "@types/chart.js": "~2.8.2",
    "@types/jest": "~24.0.17",
    "@types/react": "~16.9.1",
    "@types/react-dom": "~16.8.5",
    "@types/storybook__addon-info": "^4.1.2",
    "@types/storybook__react": "~4.0.2",
    "awesome-typescript-loader": "~5.2.1",
    "babel-loader": "~8.0.6",
    "bootstrap": "^4.3.1",
    "commitizen": "^4.0.3",
    "commitlint-config-gitmoji": "^1.0.1",
    "coveralls": "^3.0.6",
    "cz-emoji": "^1.1.2",
    "husky": "~3.0.5",
    "jest-canvas-mock": "~2.1.1",
    "lint-staged": "~9.2.5",
    "prettier": "~1.18.2",
    "react": "~16.9.0",
    "react-bootstrap": "~1.0.0-beta.11",
    "react-docgen": "^5.0.0-beta.1",
    "react-docgen-typescript-loader": "^3.2.0",
    "react-dom": "~16.9.0",
    "semantic-release": "^15.13.24",
    "semantic-release-gitmoji": "^1.3.2",
    "tsdx": "~0.9.0",
    "tslib": "~1.10.0",
    "typescript": "~3.5.3"
  },
  "dependencies": {
    "chart.js": "~2.8.0",
    "formik": "~1.5.8",
    "moment": "~2.24.0",
    "react-confirm-alert": "~2.4.1",
    "react-spinners": "~0.6.1",
    "react-toastify": "~5.3.2"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ]
  }
}
